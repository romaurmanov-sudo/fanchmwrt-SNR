/dts-v1/;
#include "mt7981.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>

/ {
	model = "SNR-CPE-AX2";
	compatible = "snr,snr-cpe-ax2", "mediatek,mt7981";

	aliases {
		led-boot = &led_power;
		led-failsafe = &led_power;
		led-running = &led_power;
		led-upgrade = &led_power;
	};

	chosen {
		bootargs = "console=ttyS0,115200";
	};

	leds {
		compatible = "gpio-leds";

		led_power: power {
			label = "blue:power";
			gpios = <&pio 18 GPIO_ACTIVE_LOW>;
		};

		internet {
			label = "blue:internet";
			gpios = <&pio 17 GPIO_ACTIVE_LOW>;
		};

		wlan_2g {
			label = "blue:wlan2g";
			gpios = <&pio 16 GPIO_ACTIVE_LOW>;
		};

		wlan_5g {
			label = "blue:wlan5g";
			gpios = <&pio 15 GPIO_ACTIVE_LOW>;
		};
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			gpios = <&pio 1 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
		};

		wps {
			label = "wps";
			gpios = <&pio 0 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
		};
	};
};

&spi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_flash_pins>;
	status = "okay";

	flash@0 {
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <52000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "BL2";
				reg = <0x000000 0x100000>;
				read-only;
			};

			partition@80000 {
				label = "u-boot-env";
				reg = <0x080000 0x080000>;
			};

			factory: partition@100000 {
				label = "Factory";
				reg = <0x100000 0x100000>;
				read-only;
			};

			partition@200000 {
				label = "FIP";
				reg = <0x200000 0x200000>;
				read-only;
			};

			partition@400000 {
				label = "ubi";
				reg = <0x400000 0x7c00000>;
			};
		};
	};
};

&eth {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&mdc_mdio_pins>;

	gmac0: mac@0 {
		compatible = "mediatek,eth-mac";
		reg = <0>;
		phy-mode = "2500base-x";
		fixed-link {
			speed = <2500>;
			full-duplex;
			pause;
		};
	};
};

&mdio_bus {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	switch: switch@0 {
		compatible = "mediatek,mt7531";
		reg = <31>;
		reset-gpios = <&pio 39 GPIO_ACTIVE_HIGH>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				label = "lan1";
			};

			port@1 {
				reg = <1>;
				label = "lan2";
			};

			port@2 {
				reg = <2>;
				label = "lan3";
			};

			port@6 {
				reg = <6>;
				label = "cpu";
				ethernet = <&gmac0>;
				phy-mode = "2500base-x";
				fixed-link {
					speed = <2500>;
					full-duplex;
					pause;
				};
			};
		};
	};
};

&wifi {
	status = "okay";
	mediatek,mtd-eeprom = <&factory 0x0000>;
};

&pio {
	spi0_flash_pins: spi0-pins {
		mux {
			function = "spi";
			groups = "spi0", "spi0_wp_hold";
		};
	};

	mdc_mdio_pins: mdc-mdio-pins {
		mux {
			function = "eth";
			groups = "mdc_mdio";
		};
	};
};
